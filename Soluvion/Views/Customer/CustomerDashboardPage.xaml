<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Soluvion.ViewModels.Customer"
             x:Class="Soluvion.Views.Customer.CustomerDashboardPage"
             Title="Customer Dashboard">

    <ContentPage.BindingContext>
        <viewmodels:CustomerDashboardViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Üdvözöljük a Customer Dashboard oldalon!" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20"/>

        <Button Text="Új időpont foglalása" Command="{Binding NavigateToNewAppointmentCommand}" Margin="0,10,0,0" />

        <!-- Itt további tartalmakat is hozzáadhatsz -->
    </StackLayout>
</ContentPage>